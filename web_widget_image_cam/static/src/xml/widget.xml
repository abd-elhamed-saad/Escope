<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-inherit="web.ImageField" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_clear_file_button')]" position="before">
            <button
                    class=" btn btn-light border-0 rounded-circle m-1 p-1"
                    data-tooltip="Capture"
                    aria-label="Capture"
                    t-on-click="onOpenCam">
                <i class="fa fa-camera fa-fw"/>
            </button>
        </xpath>
    </t>

    <t t-name="web_widget_image_cam.CameraDialog" owl="1">
        <Dialog title="'Capture Image'" size="'lg'">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-5">
                        <div class="live_cam_img" t-ref="live_cam_img"/>
                    </div>
                    <div class="col-md-2 mt64"/>
                    <div class="col-md-5">
                        <div class="webcam_img" t-ref="webcam_img"/>
                    </div>
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="_captureImage">
                    Capture Image
                </button>
                <button class="btn btn-primary save_close_btn" t-on-click="_saveClose">
                    Save &amp; Close
                </button>
                <button class="btn btn-primary" t-on-click.stop="props.close">Close</button>
            </t>
        </Dialog>
    </t>
    <t t-name="web_widget_image_cam.PopCameraDialog" owl="1">
        <Dialog title="''" size="'lg'">
            <div class="header">
                <button class="btn btn-primary" t-on-click="_captureImage">
                    Capture Image
                </button>
                <button class="btn btn-primary save_close_btn" t-on-click="_saveClose">
                    Save &amp; Close
                </button>
                <button class="btn btn-primary" t-on-click.stop="props.close">Close</button>
            </div>
            <table width="100%">
                <tr>
                    <td width="45%">
                        <span class="live_cam_img" t-ref="live_cam_img"/>
                    </td>
                    <td width="10%">
                    </td>
                    <td width="45%">
                        <span class="webcam_img" t-ref="webcam_img"/>
                    </td>
                </tr>
            </table>
        </Dialog>
    </t>
</templates>

