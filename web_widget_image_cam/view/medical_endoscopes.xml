<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="medical_endoscopes_view_search" model="ir.ui.view">
            <field name="name">search.view.endoscope</field>
            <field name="model">medical.endoscopes</field>
            <field name="arch" type="xml">
                <search string="Search Medical Endoscopes">
                    <field name="name" string="Request Number"/>
                    <field name="patient_id" string="Patient Name"/>
                    <field name="doctor_id" string="Doctor"/>
                    <field name="patient_phone" string="Patient Phone"/>
                </search>
            </field>
        </record>
        <record id="medical_endoscopes_view_tree" model="ir.ui.view">
            <field name="name">medical.endoscopes.view.tree</field>
            <field name="model">medical.endoscopes</field>
            <field name="arch" type="xml">
                <tree string="EndoScope">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="age"/>
                    <field name="doctor_id"/>
                </tree>
            </field>
        </record>
        <record id="medical_endoscopes_view_form" model="ir.ui.view">
            <field name="name">medical.endoscopes.view_form</field>
            <field name="model">medical.endoscopes</field>
            <field name="arch" type="xml">
                <form string="medical_endoscopes_form">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field class="text-break" options="{'line_breaks': False}" name="patient_id"
                                   placeholder="Select The Patient"/>
                        </h2>

                        <group>
                            <group string="Doctor / nurse">
                                <field name="doctor_id"/>
                                <field name="nurse"/>
                                <field name="nurse_assistant"/>
                                <field name="e_device"/>
                            </group>
                            <group string="Patient Information">
                                <field name="date"/>
                                <field name="id_patient"/>
                                <field name="age"/>
                                <field name="birth_date"/>
                                <field name="patient_phone" invisible="0"/>
                            </group>
                            <group string="Other information">
                                <field name="operator"/>
                                <field name="referred_by"/>
                            </group>
                        </group>
                        <group string="Endoscopy Results">
                            <field name="indications"/>
                            <field name="procedures"/>
                            <field name="medications"/>
                            <field name="findings"/>
                            <field name="conclusions"/>
                        </group>
                        <notebook>
                            <page string="Endoscope camera" name="endoscope">
                                <table width="100%" dir="rtl">
                                    <tr>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_1" class="oe_inline" force_save="1"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_2" class="oe_inline" force_save="1"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_3" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_4" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_5" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_6" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_7" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_8" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_9" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_10" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_11" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_12" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_13" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_14" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                        <td width="20%"
                                            style="vertical-align:center;max-height:30px;text-align:center;font-size:16px">
                                            <field name="image_15" class="oe_inline"
                                                   widget="image"/>
                                        </td>
                                    </tr>
                                </table>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="medical_endoscopes_action" model="ir.actions.act_window">
            <field name="name">Medical Endoscopes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.endoscopes</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="medical_endoscopes_menu" name="Medical Endoscopes" action="medical_endoscopes_action"
                  web_icon="web_widget_image_cam,static/description/icon.png"/>


    </data>
</odoo>