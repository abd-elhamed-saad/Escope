<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <template id="report_medical_endoscope">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">

                    <t t-set="company" t-value="env.company"/>
                    <style>
                        .no-page-break {
                        page-break-inside: avoid;
                        }

                        .report-image {
                        max-height: 700px; /* Adjust based on your page size and margins */
                        width: auto; /* Maintain aspect ratio */
                        display: block; /* Remove extra space below images */
                        margin-bottom: 20px; /* Adjust space between images */
                        }
                    </style>
                    <div class="page">
                        <div class="row">
                            <div class="col-8">
                                <h2 style="color: red;">
                                    Colonoscopy Report
                                    <span t-field="o.name"/>
                                </h2>
                                <table class="table table-sm o_main_table">
                                    <tr>
                                        <td class="text-center">Patient Name</td>
                                        <td class="text-center">
                                            <span t-field="o.patient_id"/>
                                        </td>

                                        <td class="text-center">ID :</td>
                                        <td name="td_partner_id.name" class="text-center">
                                            <span t-field="o.id_patient"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center">Endoscopist :</td>
                                        <td class="text-center">
                                            <span t-field="o.doctor_id"/>
                                        </td>

                                        <td class="text-center">DOB :</td>
                                        <td name="td_partner_id.name" class="text-center">
                                            <span t-field="o.birth_date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center">2nd Operator :</td>
                                        <td class="text-center">
                                            <span t-field="o.operator"/>
                                        </td>

                                        <td class="text-center">Age :</td>
                                        <td name="td_partner_id.name" class="text-center">
                                            <span t-field="o.age"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center">Referred By :</td>
                                        <td class="text-center">
                                            <span t-field="o.referred_by"/>
                                        </td>

                                        <td class="text-center">Date :</td>
                                        <td name="td_partner_id.name" class="text-center">
                                            <span t-field="o.date"/>
                                        </td>
                                    </tr>
                                </table>
                                <div class="row">
                                    <strong style="color: blue;">
                                        INDICATION FOR EXAMINATION
                                    </strong>
                                    <br/>
                                    <t t-if="o.indications">
                                        <span t-field="o.indications"/>
                                    </t>
                                    <t t-else="">
                                        <br/>
                                        <br/>
                                    </t>
                                </div>
                                <div class="row">
                                    <strong style="color: blue;">
                                        PROCEDURE PERFORMED
                                    </strong>
                                    <br/>
                                    <t t-if="o.procedures">
                                        <span t-field="o.procedures"/>
                                    </t>
                                    <t t-else="">
                                        <br/>
                                        <br/>
                                    </t>
                                </div>
                                <div class="row">
                                    <strong style="color: blue;">
                                        MEDICATIONS
                                    </strong>
                                    <br/>
                                    <t t-if="o.medications">
                                        <span t-field="o.medications"/>
                                    </t>
                                    <t t-else="">
                                        <br/>
                                        <br/>
                                    </t>
                                </div>
                                <div class="row">
                                    <strong style="color: blue;">
                                        FINDINGS
                                    </strong>
                                    <br/>
                                    <t t-if="o.findings">
                                        <span t-field="o.findings"/>
                                    </t>
                                    <t t-else="">
                                        <br/>
                                        <br/>
                                    </t>
                                </div>
                                <div class="row">
                                    <strong style="color: blue;">
                                        CONCLUSIONS
                                    </strong>
                                    <br/>
                                    <t t-if="o.conclusions">
                                        <span t-field="o.conclusions"/>
                                    </t>
                                    <t t-else="">
                                        <br/>
                                        <br/>
                                    </t>
                                </div>
                                <div class="row">
                                    <strong style="color: blue;">
                                        RECOMMENDATIONS
                                    </strong>
                                    <br/>
                                    <t t-if="o.recommendations">
                                        <span t-field="o.recommendations"/>
                                    </t>
                                    <t t-else="">
                                        <br/>
                                        <br/>
                                    </t>
                                </div>
                            </div>
                            <div class="col-4">

                                <t t-foreach="range(1, 101)" t-as="num">
                                    <!-- Dynamically check if the boolean field for the current image is true -->
                                    <t t-if="o['is_img%d' % num]">
                                        <!-- Display the image in its own row -->
                                        <div class="row no-page-break"> <!-- Add a bottom margin for spacing -->
                                            <div class="col-12">
                                                <img t-att-src="image_data_uri(o['img%d' % num])"
                                                     style="width: 100%; height: auto; display: block;"/>
                                            </div>
                                        </div>
                                    </t>
                                </t>
                            </div>


                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

