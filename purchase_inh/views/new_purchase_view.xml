<odoo>
    <data>
        <record id="view_purchase_order_sample_tree" model="ir.ui.view">
            <field name="name">purchase.order.sample.tree</field>
            <field name="model">purchase.order.sample</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <!-- Add your custom fields here if any, for example: -->
                    <field name="is_sample" invisible="0"/>
                </xpath>
            </field>
        </record>
        <record id="view_purchase_order_sample_form" model="ir.ui.view">
            <field name="name">purchase.order.sample.form</field>
            <field name="model">purchase.order.sample</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <!-- Add any custom fields or modifications here -->
                    <field name="is_sample"/>
                </xpath>
                <!-- For more extensive changes, adjust or add elements as needed -->
            </field>
        </record>

